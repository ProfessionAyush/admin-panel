<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Collection</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="/stylesheets/dashboard.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body class="bg-gray-100 flex h-screen">
    <%- include('partials/navbar') %>
        <div class="flex-1 p-10">
            <div class="flex justify-between items-center">
                <button class="menu-button bg-blue-500 text-white p-2 rounded-md md:hidden focus:outline-none">
                    <i class="fas fa-bars"></i>
                </button>
                <button class="close-button bg-blue-500 text-white p-2 rounded-md md:hidden focus:outline-none hidden">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold mb-4">Registry Entries</h2>
                <form id="filterForm" class="flex items-center space-x-4" method="GET" action="/registry-entry">
                    <input type="text" name="search" id="searchBar" placeholder="Search by Site"
                        class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    <input type="date" name="startDate" id="startDate"
                        class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    <input type="date" name="endDate" id="endDate"
                        class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    <button type="submit"
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Filter</button>
                    <a href="/registry-entry-report" id="previewBtn"
                        class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">Preview</a>
                    <a href="/add-registry-entry"
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Add Entry</a>
                </form>
            </div>
            <% if (data.length> 0) { %> <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Serial No</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Gata No</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Date of Registration</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Site</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Seller</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Purchaser</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Mobile No</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Area</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Rate</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Total Amount</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Gov Value</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Marketing Value</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Plot Number</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Group Commision</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Balance Amount</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Mediator</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Mediator Commision</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Balance Group Commision Amount</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Images</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="registryTable">
                            <% data.forEach(function(entry, index) { %>
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= index + 1 %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.gataNo %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.site %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= new Date(entry.dateOfRegistration).toLocaleDateString() %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.seller %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.purchaser %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.mobileNo %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.area %> sq. ft.
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.rate %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.totalAmount %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.govValue %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.marketingValue %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.plotNumber %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.groupCommision %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.balanceAmount %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.mediator %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.mediatorCommision %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.balanceGroupCommisionAmount %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <%= entry.imageUrl.length %> images <a href="/add-images/<%= entry._id %>"
                                                class="bg-green-500 hover:bg-green-700 text-white text-xs font-bold py-1 px-2 rounded ml-2">+
                                                Add Image</a>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap flex space-x-2"> <a
                                            href="/edit-registry-entry/<%= entry._id %>"
                                            class="text-indigo-600 hover:text-indigo-900"> <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="/delete-registry-entry/<%= entry._id %>" method="POST"
                                            class="inline delete-form"> <button type="submit"
                                                class="text-red-600 hover:text-red-900"><i
                                                    class="fas fa-trash-alt"></i></button> </form>
                                        <a href="/registry-entry/details/<%= entry._id %>"
                                            class="text-blue-600 hover:text-blue-900"> <i
                                                class="fas fa-info-circle"></i> </a>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <p>No data found.</p>
                    <% } %>
        </div>


        <!-- Modal for Adding Images -->
        <div id="imageModal" class="fixed inset-0 hidden bg-gray-800 bg-opacity-75 flex items-center justify-center">
            <div class="bg-white p-8 rounded-lg">
                <h3 class="text-2xl font-bold mb-4">Add Images</h3>
                <form id="imageForm" method="POST" enctype="multipart/form-data"> <input type="hidden" id="entryId"
                        name="entryId">
                    <div class="mb-4"> <label class="block text-gray-700 text-sm font-bold mb-2" for="images">Upload
                            Images</label> <input
                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="images" type="file" name="images" multiple required> </div>
                    <div class="flex items-center justify-between"> <button
                            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                            type="submit"> Add Images </button> <button
                            class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                            type="button" id="closeModal"> Cancel </button> </div>
                </form>
            </div>
        </div>



        <script>

            document.querySelectorAll('.add-image-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const entryId = this.getAttribute('data-entry-id');
                    document.getElementById(`fileInput-${entryId}`).click();
                });
            });
            document.querySelectorAll('.file-input').forEach(input => {
                input.addEventListener('change', function () {
                    // Handle file input change, e.g., upload the file or update the UI
                    const entryId = this.id.split('-')[1];
                    alert(`File selected for entry ID: ${entryId}`);
                });
            });

            document.getElementById('filterForm').addEventListener('submit', function (event) {
                const search = document.getElementById('searchBar').value;
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;
                const urlParams = new URLSearchParams(window.location.search);
                if (search) urlParams.set('search', search);
                else urlParams.delete('search');
                if (startDate) urlParams.set('startDate', startDate);
                else urlParams.delete('startDate');
                if (endDate) urlParams.set('endDate', endDate);
                else urlParams.delete('endDate');
                window.location.search = urlParams.toString();
            });


            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function (event) {
                    event.preventDefault();
                    const confirmation = confirm('Are you sure you want to delete this entry?');
                    if (confirmation) {
                        form.submit();
                    }
                });
            });

            document.querySelector('.menu-button').addEventListener('click', () => {
                document.querySelector('nav').classList.toggle('-translate-x-full');
                document.querySelector('.menu-button').classList.toggle('hidden');
                document.querySelector('.close-button').classList.toggle('hidden');
            });

            document.querySelector('.close-button').addEventListener('click', () => {
                document.querySelector('nav').classList.toggle('-translate-x-full');
                document.querySelector('.menu-button').classList.toggle('hidden');
                document.querySelector('.close-button').classList.toggle('hidden');
            });
        </script>
</body>

</html>