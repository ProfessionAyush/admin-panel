<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="/stylesheets/dashboard.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>
<body class="bg-gray-100 flex h-screen">
    <%- include('partials/navbar') %>
    <div class="flex-1 p-10">
        <div class="flex justify-between items-center">
            <button class="menu-button bg-blue-500 text-white p-2 rounded-md md:hidden focus:outline-none">
                <i class="fas fa-bars"></i>
            </button>
            <button class="close-button bg-blue-500 text-white p-2 rounded-md md:hidden focus:outline-none hidden">
                <i class="fas fa-times"></i>
            </button>
        </div>
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold">Settings</h1> <a href="/register"
            class="bg-green-500 text-white px-4 py-2 rounded-md flex items-center"> <i class="fas fa-plus mr-2"></i> Add
            Admin </a>
    </div>
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">Admin Management</h2>
        <p class="text-gray-700 mb-4">Total Admins: <%= admins.length %>
        </p>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Full Name
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% admins.forEach(function(admin) { %>
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <%= admin.fullname %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <%= admin.username %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap"> <a href="/edit-admin/<%= admin._id %>"
                                class="text-blue-500 hover:text-blue-700"><i class="fas fa-edit"></i></a>
                            <form action="/delete-admin/<%= admin._id %>" method="POST" class="inline"> <button
                                    type="submit" class="text-red-500 hover:text-red-700 ml-2"><i
                                        class="fas fa-trash"></i></button> </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    

    <script>
        document.querySelector('.menu-button').addEventListener('click', () => {
            document.querySelector('nav').classList.toggle('-translate-x-full');
            document.querySelector('.menu-button').classList.toggle('hidden');
            document.querySelector('.close-button').classList.toggle('hidden');
        });

        document.querySelector('.close-button').addEventListener('click', () => {
            document.querySelector('nav').classList.toggle('-translate-x-full');
            document.querySelector('.menu-button').classList.toggle('hidden');
            document.querySelector('.close-button').classList.toggle('hidden');
        });
    </script>
</body>
</html>
